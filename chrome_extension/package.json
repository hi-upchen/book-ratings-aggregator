{
  "name": "book-ratings-aggregator",
  "version": "1.0.0",
  "description": "Displaying Goodreads ratings while browsing Kobo books, enhancing your discovery process, ensuring you don't miss out on great reads.",
  "repository": "https://github.com/hi-upchen/book-ratings-aggregator",
  "author": "Up Chen <hi.upchen@gmail.com>",
  "license": "GPL-3.0",
  "scripts": {
    "start": "NODE_ENV=development parcel watch src/manifest.json --host localhost --config @parcel/config-webextension",
    "build": "NODE_ENV=production parcel build src/manifest.json --config @parcel/config-webextension",
    "build:dev": "NODE_ENV=development parcel build src/manifest.json --config @parcel/config-webextension",
    "clean": "rm -rf dist && rm -rf .parcel-cache",
    "pack:zip": "npm run clean && npm run build && cd dist && zip -r ../book-ratings-aggregator.zip * && cd .. ",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.11.0",
    "@parcel/transformer-sass": "2.11.0",
    "@types/chrome": "^0.0.263",
    "@types/jest": "^29.5.12",
    "buffer": "^5.5.0||^6.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "parcel": "^2.12.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12"
  }
}
